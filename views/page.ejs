<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Herb Details</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Arial', sans-serif;
            background-color: #f3f4ed;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .container {
            display: flex;
            width: 70%;
            max-width: 1000px;
            height: 300px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            background-color: #fff;
            overflow: hidden;
        }

        /* Image Section Styles */
        .image-section {
            width: 45%;
            background-color: #f0f0f0;
            position: relative;
            overflow: hidden;
        }

        .slider {
            display: flex;
            transition: transform 0.6s ease-in-out;
            width: 200%; /* Adjust based on number of slides */
        }

        .slider img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        /* Sliding Buttons */
        .slide-btn {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            background-color: rgba(0, 0, 0, 0.5);
            border: none;
            color: white;
            padding: 10px;
            cursor: pointer;
            border-radius: 50%;
            z-index: 100;
        }

        .prev-btn {
            left: 10px;
        }

        .next-btn {
            right: 10px;
        }

        /* Hover to zoom on current image */
        .image-section:hover .slider img {
            cursor: zoom-in;
        }

        /* Info section styling */
        .info-section {
            width: 55%;
            padding: 30px;
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            background-color: #ffffff;
            overflow-y: hidden;
            position: relative;
            height: 300px;
        }

        .info-content {
            height: 600px; /* Simulate long content */
            position: relative;
            overflow-y: hidden;
            transition: transform 0.5s ease-in-out;
        }

        .info-section h1 {
            font-size: 28px;
            color: #2e8b57;
            margin-bottom: 15px;
        }

        .info-section p, .info-section h2 {
            font-size: 14px;
            line-height: 1.6;
            color: #555;
            margin-bottom: 15px;
        }

        .info-section h2 {
            font-size: 20px;
            color: #3cb371;
            margin-top: 10px;
            margin-bottom: 10px;
        }

        .info-section ul {
            padding: 0;
            margin-bottom: 15px;
        }

        .info-section ul li {
            font-size: 14px;
            padding-left: 25px;
            line-height: 1.6;
            position: relative;
        }

        .info-section ul li::before {
            content: "âœ”";
            position: absolute;
            left: 0;
            color: #2e8b57;
        }

        @media (max-width: 768px) {
            .container {
                flex-direction: column;
                width: 90%;
                height: auto;
            }

            .image-section, .info-section {
                width: 100%;
                height: 300px;
            }

            .info-section {
                padding: 20px;
            }

            .slide-btn {
                display: none;
            }
            
        }
        .bookmark-section {
        margin-top: 20px;
    }
    .bookmark-btn {
        padding: 10px 20px;
        background-color: #2e8b57;
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
    }
    .bookmark-btn:hover {
        background-color: #3cb371;
    }
    </style>
</head>
<body>
    <div class="container">
        <!-- Image Section with Slider -->
        <div class="image-section">
            <div class="slider" id="slider">
                <img src="/<%= herb.photo1 %>" alt="<%= herb.name %> Photo 1">
                <img src="/<%= herb.photo2 %>" alt="<%= herb.name %> Photo 2">
            </div>
            <button class="slide-btn prev-btn" onclick="prevSlide()">&#10094;</button>
            <button class="slide-btn next-btn" onclick="nextSlide()">&#10095;</button>
        </div>

        <!-- Info Section with Manual Scrolling -->
        <div class="info-section" id="info-section">
            <div class="bookmark-section">
                <form action="/bookmark" method="POST">
                    <input type="hidden" name="herb_id" value="<%= herb.herb_id %>">
                    <button type="submit" class="bookmark-btn">Bookmark this Herb</button>
                </form>
            </div>
            <div class="info-content" id="info-content">
                <h1><%= herb.name %> (<i><%= herb.scientific_name %></i>)</h1>
                <p><%= herb.description %></p>
                <h2>Uses</h2>
                <p><%= herb.uses %></p>
                <h2>Active Compounds</h2>
                <p><%= herb.active_compounds %></p>
                <h2>Precautions</h2>
                <p><%= herb.precautions %></p>
                <h2>Cures</h2>
                <p><%= herb.cure %></p>
                <h2>Season</h2>
                <p><%= herb.season %></p>
            </div>
           
        </div>
    </div>


    <script>
        // Sliding Functionality
        let currentSlide = 0;
        const slides = document.querySelectorAll('.slider img');
        const totalSlides = slides.length;

        function showSlide(index) {
            const slider = document.getElementById('slider');
            slider.style.transform = `translateX(-${index * 100}%)`;
        }

        function nextSlide() {
            currentSlide = (currentSlide + 1) % totalSlides;
            showSlide(currentSlide);
        }

        function prevSlide() {
            currentSlide = (currentSlide - 1 + totalSlides) % totalSlides;
            showSlide(currentSlide);
        }

        // Zoom functionality only on the currently visible slide
        const imageSection = document.querySelector('.image-section');

        imageSection.addEventListener('mousemove', function(e) {
            const currentImage = slides[currentSlide]; // Only zoom the current slide
            const rect = imageSection.getBoundingClientRect();
            const x = e.clientX - rect.left;
            const y = e.clientY - rect.top;

            currentImage.style.transform = `scale(2)`;
            currentImage.style.transformOrigin = `${x}px ${y}px`;
        });

        imageSection.addEventListener('mouseleave', function() {
            slides.forEach(img => img.style.transform = 'scale(1)');
        });

        // Scroll functionality for the info section
        let startY, scrollTop;
        const infoSection = document.getElementById('info-section');
        const infoContent = document.getElementById('info-content');

        infoSection.addEventListener('mousedown', (e) => {
            startY = e.pageY - infoSection.offsetTop;
            scrollTop = infoSection.scrollTop;
            infoSection.style.cursor = 'grabbing';
            infoSection.addEventListener('mousemove', handleMouseMove);
        });

        infoSection.addEventListener('mouseup', () => {
            infoSection.style.cursor = 'default';
            infoSection.removeEventListener('mousemove', handleMouseMove);
        });

        function handleMouseMove(e) {
            const y = e.pageY - infoSection.offsetTop;
            const walk = (y - startY) * 1.5; // Scrolling multiplier
            infoSection.scrollTop = scrollTop - walk;
        }
    </script>
</body>
</html>
